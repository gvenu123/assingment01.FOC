#include <stdio.h>
int main()
 {
    int n, i;
    float num, sum = 0.0, average;
     printf("Enter the total number of elements:\n ");
    scanf("%d", &n);
    for (i = 0; i < n; i++)
	 {
        printf("Enter element %d:\n ", i+1);
        scanf("%f", &num);
        sum += num;
    }
    
    average = sum / n;
    printf("sum = %.2f\n", sum);
    printf("average = %.2f\n", average);
    return 0;

}
